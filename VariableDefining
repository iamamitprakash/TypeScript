var <variable_name> : Type = <value>; // type annotation or type signature-> Syntax for how to define a variable in TS

let id : number = 5;
let firstName = "Amit"; // TS understands firstName will store strings
// firstName = 12; TSC throws error
var lastName : string = "Prakash";
// lastName = 13; TSC throws error
console.log(id, firstName);

//  Union of types
let userId : number | string = "26";// it shows data types of number and string
userId = 10;

// Any type in TS
let x : any = 10;
x = "Sakshi";
x = false;
console.log(x);
